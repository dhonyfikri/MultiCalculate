<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".bbi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_bg"
        android:layout_gravity="top"
        android:gravity="left">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/tentang"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TENTANG"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="110dp"
        android:background="@drawable/btn_bg"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="CalcKit App"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="30dp"
        android:gravity="center">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/logo_calckit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Name : CalcKit"
            android:layout_marginVertical="5dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Version : V.1.00"
            android:layout_marginVertical="5dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developper : Muhamad Fikri Rizki Romadhoni"
            android:layout_marginVertical="5dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Powered by"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="8dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_android"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANDROID"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnHitungKonvSuhu"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="MULTI CALCULATE"/>

    </LinearLayout>
</LinearLayout>