<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".bbi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_bg"
        android:gravity="left">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/nilai_kuliah"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KONVERSI NILAI"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="80dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Jumlah Nilai"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/spJumlahNilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:entries="@array/jumlah_nilai">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 1"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 2"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 3"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 4"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai4"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 5"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 6"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai6"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 7"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai7"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 8"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai8"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 9"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai9"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtNilai10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai 10"
                    android:layout_marginVertical="10dp"
                    android:textSize="22sp"
                    android:textStyle="italic"
                    android:layout_marginHorizontal="8dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <EditText
                        android:id="@+id/etNilai10"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:hint="-"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700"
                        android:textSize="25sp"
                        android:background="@drawable/edit_bg"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnGrade"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Hitung Nilai"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/grad_bg"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="RATA-RATA"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txtMean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="35sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="GRADE"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txtGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="35sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>