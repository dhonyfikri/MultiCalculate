<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".bbi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_bg"
        android:gravity="left">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/bmi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BERAT BADAN IDEAL"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/male"/>

        <Switch
            android:id="@+id/swButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="M"
            android:textOn="F"
            android:gravity="center"
            android:layout_marginHorizontal="40dp"
            android:thumb="@drawable/sw_thumb"
            android:track="@drawable/sw_track"
            android:showText="true"/>

        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@drawable/female"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Dalam Kilogram"
            android:layout_marginVertical="30dp"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <EditText
                android:id="@+id/etBerat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:hint="0"
                android:maxLength="5"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="25sp"
                android:background="@drawable/edit_bg"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi Dalam Centimeter"
            android:layout_marginVertical="30dp"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <EditText
                android:id="@+id/etTinggi"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:hint="0"
                android:maxLength="3"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="25sp"
                android:background="@drawable/edit_bg"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnBBI"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Hitung BBI"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/grad_bg"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="BERAT IDEAL"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txtBeratIdeal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="0 Kg"
                    android:textColor="@color/white"
                    android:textSize="35sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="BERAT ANDA"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txtBeratAnda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="0 Kg"
                    android:textColor="@color/white"
                    android:textSize="35sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/txtKetKesimpulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="KESIMPULAN"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtKesimpulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="-------"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>